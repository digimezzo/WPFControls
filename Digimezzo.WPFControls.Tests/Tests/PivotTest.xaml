        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digimezzo.WPFControls.Tests.Tests"
        xmlns:controls="clr-namespace:Digimezzo.WPFControls;assembly=Digimezzo.WPFControls"
        mc:Ignorable="d"
        Title="PivotTest" Height="300" Width="300">
    <Grid>
        <controls:Pivot>
            <controls:PivotItem Header="Item1" Foreground="LightGray" SelectedForeground="Black" FontSize="24" SelectedFontWeight="Bold">
