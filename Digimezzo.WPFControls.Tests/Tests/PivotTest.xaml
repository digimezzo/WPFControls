            </controls:PivotItem>
            <controls:PivotItem Header="Item2" Foreground="LightGray" SelectedForeground="Black" FontSize="24" SelectedFontWeight="Bold">
                <TextBlock Foreground="Black" FontSize="13">Content 2</TextBlock>
            </controls:PivotItem>
            <controls:PivotItem Header="Item3" Foreground="LightGray" SelectedForeground="Black" FontSize="24" SelectedFontWeight="Bold">
                <TextBlock Foreground="Black" FontSize="13">Content 3</TextBlock>
            </controls:PivotItem>
        </controls:Pivot>
    </Grid>
</Window>
